{
  "name": "@metis.io/core-utils",
  "version": "0.6.2",
  "main": "dist/index",
  "files": [
    "dist/*"
  ],
  "types": "dist/index",
  "author": "Optimism PBC, Metis.io",
  "license": "MIT",
  "scripts": {
    "all": "yarn clean && yarn build && yarn test && yarn lint:fix && yarn lint",
    "build": "tsc -p tsconfig.build.json",
    "build:proto": "grpc_tools_node_protoc --plugin=protoc-gen-ts=./node_modules/.bin/protoc-gen-ts --ts_out=./src/da/eigenda/generated --js_out=import_style=commonjs,binary:./src/da/eigenda/generated --grpc_out=./src/da/eigenda/generated --proto_path=./src/da/eigenda/proto/ ./src/da/eigenda/proto/*.proto",
    "clean": "rimraf dist/ ./tsconfig.build.tsbuildinfo",
    "lint": "yarn lint:fix && yarn lint:check",
    "lint:check": "eslint .",
    "lint:fix": "yarn lint:check --fix",
    "format": "prettier --write '**/*.ts'",
    "pre-commit": "lint-staged",
    "test": "ts-mocha test/**/*.spec.ts --timeout 120000",
    "test:coverage": "nyc ts-mocha test/**/*.spec.ts && nyc merge .nyc_output coverage.json"
  },
  "devDependencies": {
    "@types/chai": "^4.2.18",
    "@types/lodash": "^4.14.168",
    "@types/minio": "^7.0.12",
    "@types/mocha": "^8.2.2",
    "@types/prettier": "^2.2.3",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-ban": "^1.5.2",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsdoc": "^35.1.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-unicorn": "^32.0.1",
    "lint-staged": "11.0.0",
    "mocha": "^8.4.0",
    "nyc": "^15.1.0",
    "prettier": "^2.3.1",
    "ts-mocha": "^8.0.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@ethersproject/abstract-provider": "^5.4.1",
    "@ethersproject/providers": "^5.4.5",
    "@grpc/grpc-js": "^1.10.10",
    "@metis.io/minio": "^7.0.28",
    "@types/google-protobuf": "^3.15.12",
    "chai": "^4.3.4",
    "ethers": "^5.4.5",
    "google-protobuf": "^3.21.2",
    "lodash": "^4.17.21",
    "protoc-gen-ts": "^0.8.7"
  }
}
